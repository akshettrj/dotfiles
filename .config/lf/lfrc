set drawbox on
set hidden on
set number on
set relativenumber on
# set preview on
set icons on

cmd mkdir %{{
	printf " Enter Directory Name: "
	read ans
	mkdir "$ans"
	clear
}}

cmd mkfile %{{
	printf " Enter File Name: "
	read ans
	touch "$ans"
	clear
}}

cmd mark-watched %{{
	file_name=$(basename "$f")
	mv "$PWD/$file_name" "$PWD/ï€Œ $file_name"
}}


# Modify things
map md mkdir
map mf mkfile
map DD delete
map W mark-watched

# Movements
